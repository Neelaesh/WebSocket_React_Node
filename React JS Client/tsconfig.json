{
    "compilerOptions": {
        "allowJs": true, // Allows JavaScript files to be compiled
        "jsx": "react", // Specifies the JSX code generation
        "target": "es5", // Specifies the ECMAScript target version
        "module": "commonjs", // Specifies the module code generation
        "lib": ["dom", "es2015"], // Specifies the library files to be included in the compilation
        "declaration": true, // Generates corresponding '.d.ts' file
        "noImplicitAny": true, // Raise error on expressions and declarations with an implied 'any' type
        "removeComments": true, // Removes comments from the output
        "strict": true, // Enable all strict type-checking options
        "experimentalDecorators": true, // Enables experimental support for decorators
        "sourceMap": true, // Generates corresponding '.map' file
        "listFiles": true, // Include files in the compilation
        "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
        "allowSyntheticDefaultImports": true, // Allows default imports from modules with no default export
        "types": ["jest", "node", "@testing-library/jest-dom"], // Specifies type definitions to be included
        "typeRoots": ["../node_modules/@types", "./types"], // Specifies the root folders for type definitions
        "outDir": "./dist", // Specifies the output directory for compiled files
    },
    "include": ["./src/index.tsx", "./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.js", "./src/**/*.jsx"], // Specifies the files to be included in the compilation
    "exclude": ["node_modules", "dist", "build", "coverage", "scripts", "webpack.config.js", "webpack.dev.js", "webpack.prod.js", "jest.config.js", "babel.config.js"], // Specifies the files to be excluded from the compilation
}